<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    tools:context=".UserProfileActivity"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/boat_bg"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:src="@drawable/person_profile" />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/user_profile_icon"
                android:fontFamily="@font/adamina"
                android:includeFontPadding="false"
                android:text="Raj"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />



        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-100dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#3944F7"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"                android:background="#3944F7"


                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/profile_crop"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/profile_boat" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp"
                        android:src="@drawable/profile_plus" />

                    <TextView
                        android:id="@+id/profile_count_text"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_crop"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Total Expeditions"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_count_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_count_text"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="15"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#3944F7"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3944F7"

                   >

                    <ImageView
                        android:id="@+id/profile_writeup"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/profile_help" />


                    <TextView
                        android:id="@+id/profile_crop_count2"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_writeup"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Total Helps Responded"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_contribution2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_crop_count2"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="10"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Expeditions:"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="170dp"
      android:text="No Recent Expeditions"
      android:textColor="#000"
      android:textSize="24sp"
      android:gravity="center"
      >

  </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="7dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#777E8B"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"></Button>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#FF3031"
                android:text="Log-Out"
                android:textColor="#FFFFFF"></Button>

        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"

        app:menu="@menu/menu_navigation">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>